<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewHorizon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/darkBlueMain</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/midBlue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    
    <style name="DMSansTextActive" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="color">@color/darkBlueMain</item>
    </style>

    <style name="DMSansTextInactive" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="color">@color/lightGray</item>
    </style>



</resources>